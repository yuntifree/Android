<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <!--android:fitsSystemWindows="true"-->
    <!--android:clipToPadding="true"-->

    <com.yunxingzh.wireless.mvp.ui.utils.MyScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_head_img"
                android:layout_width="match_parent"
                android:layout_height="344dp"
                android:background="@drawable/main_bg"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_weight="1"
                        android:src="@drawable/title_text" />

                    <ImageView
                        android:id="@+id/title_right_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/zxing" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/weather_img_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="280dp"
                            android:scaleType="matrix" />

                        <ImageView
                            android:id="@+id/weather_img_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:scaleType="matrix" />

                    </LinearLayout>

                  <!--  <TextView
                        android:id="@+id/circle_three_tv"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:background="@drawable/main_circle_three"
                        android:gravity="center"
                        android:textColor="@color/blue_009CFB" />
                   -->

                    <com.yunxingzh.wireless.mvp.view.CircleWaveView
                        android:id="@+id/connect_tv"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        app:diffuse_color="@color/white"
                        app:diffuse_coreColor="@color/white"
                        app:diffuse_coreImage="@drawable/main_circle"
                        app:diffuse_coreRadius="100"
                        app:diffuse_maxWidth="150"
                        app:diffuse_width="3"/>

                   <TextView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:text="一键连接"
                        android:gravity="center"
                        android:textColor="@color/blue_009CFB" />

                </FrameLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="@string/find_wifi"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/weather_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/main_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:text="18°C"
                        android:textColor="@color/gray_98ffffff"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/main_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="多云"
                        android:textColor="@color/gray_98ffffff"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/main_wifi_manager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@drawable/wifi" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/wifi"
                            android:textColor="@color/gray_323232"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/find_more"
                            android:textColor="@color/gray_646464"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/divide_line_vertical" />

                <LinearLayout
                    android:id="@+id/main_speedtest_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@drawable/speed" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/speed"
                            android:textColor="@color/gray_323232"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/speed_font"
                            android:textColor="@color/gray_646464"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View style="@style/divide_line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/main_map_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@drawable/map" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/map"
                            android:textColor="@color/gray_323232"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/map_content"
                            android:textColor="@color/gray_646464"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/divide_line_vertical" />

                <LinearLayout
                    android:id="@+id/main_spirited_lay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@drawable/yun" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="30dp"
                            android:text="@string/yun"
                            android:textColor="@color/gray_323232"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginBottom="10dp"
                            android:text="@string/yun_content"
                            android:textColor="@color/gray_646464"
                            android:textSize="10sp" />

                        <ImageView
                            android:id="@+id/show_more_iv"
                            android:layout_width="80dp"
                            android:layout_height="24dp"
                            android:paddingBottom="3dp"
                            android:src="@drawable/more" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View style="@style/divide_line_horizontal" />

            <LinearLayout
                android:id="@+id/notice_lay"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/blue_def2fe"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="2.5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/notice" />

                <TextView
                    android:id="@+id/notice_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_gravity="center"
                    android:text="东莞虎门一火车"
                    android:textColor="@color/blue_4a90e2"
                    android:textSize="12sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/main_news_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scrollbars="none"
                android:background="@color/white"
                android:divider="@color/gray_f5f5f5"
                android:dividerHeight="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/foot_view"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@color/blue_63C7FF"
                    android:gravity="center"
                    android:text="@string/get_more"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <include layout="@layout/activity_main_font_info" />

        </LinearLayout>
    </com.yunxingzh.wireless.mvp.ui.utils.MyScrollView>
</com.zhy.android.percent.support.PercentLinearLayout>