<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dialog"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/dialog_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gray_3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gray_6"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="12dp"/>

        <LinearLayout
            android:id="@+id/dialog_container_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btns_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/dialog_negative_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_dialog_positive_btn"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/dialog_positive_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_dialog_negative_btn"
                android:text="确定"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_close_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right|top"
        android:src="@drawable/ic_close" />
</FrameLayout>