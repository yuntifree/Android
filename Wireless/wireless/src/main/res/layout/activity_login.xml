<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="72dp"
        android:src="@drawable/logo_87"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/welcome"
        android:textColor="@color/gray_5A5A5A"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/lo_phone_et"
            android:layout_width="260dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/border_login_style"
            android:drawableLeft="@drawable/login_name"
            android:drawablePadding="10dp"
            android:hint="@string/phone"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/gray_5A5A5A"
            android:textColorHint="@color/gray_b4b4b4"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:background="@drawable/border_login_style"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/validate_code_et"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/login_pwd"
                android:drawablePadding="10dp"
                android:hint="@string/validate_code"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/gray_5A5A5A"
                android:textColorHint="@color/gray_b4b4b4"
                android:textSize="12sp" />

            <View style="@style/divide_line_vertical_blue"
                android:layout_height="22dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/get_validate_code_btn"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:layout_marginRight="1dp"
                android:text="@string/get_validate_code"
                android:textColor="@color/blue_00A0FB"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/lo_login_btn"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/style_login_btn"
            android:text="@string/login"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_b5b5b5"
                android:textSize="11sp"
                android:text="@string/agree"/>

            <TextView
                android:id="@+id/agree_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_00A0FB"
                android:textSize="11sp"
                android:text="@string/agree_content"/>

        </LinearLayout>

        <ImageView
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginTop="60dp"
            android:src="@drawable/login_bg"/>
    </LinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>