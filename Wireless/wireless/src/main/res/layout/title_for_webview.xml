<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/blue_009CFB"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/web_return_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/return_img" />

    <View style="@style/divide_line_vertical_white"
        android:id="@+id/web_line"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:layout_marginRight="6dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/web_close_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/icon_close"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/web_name_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="70dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/dg_wifi"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>