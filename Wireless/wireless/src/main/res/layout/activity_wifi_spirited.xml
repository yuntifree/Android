<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/title_public"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:src="@drawable/spirited_title" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/spirited_bg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/content_first"
                        android:textColor="@color/gray_787878"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/content_two"
                        android:textColor="@color/gray_787878"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/content_three"
                        android:textColor="@color/gray_787878"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/content_four"
                        android:textColor="@color/gray_787878"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/content_five"
                        android:textColor="@color/gray_787878"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/content_six"
                        android:textColor="@color/gray_787878"
                        android:textSize="12sp" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/spirited_ssid" />

                    <com.yunxingzh.wireless.mview.ClearEditText
                        android:id="@+id/sp_ssid_et"
                        android:layout_width="235dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:gravity="center"
                        android:paddingRight="25dp"
                        android:hint="@string/input_ssid"
                        android:textColor="@color/gray_b4b4b4"
                        android:textColorHint="@color/gray_b4b4b4"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="220dp"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_969696"
                    android:layout_marginTop="10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/spirited_pwd" />

                    <com.yunxingzh.wireless.mview.ClearEditText
                        android:id="@+id/sp_pwd_et"
                        android:layout_width="235dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:gravity="center"
                        android:paddingRight="25dp"
                        android:hint="@string/spirited_input_pwd"
                        android:inputType="textPassword"
                        android:textColor="@color/gray_b4b4b4"
                        android:textColorHint="@color/gray_b4b4b4"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="220dp"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_969696"
                    android:layout_marginTop="10sp" />

                <TextView
                    android:id="@+id/sp_join_btn"
                    android:layout_width="262dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/style_spirited"
                    android:gravity="center"
                    android:text="@string/spirited_join"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>