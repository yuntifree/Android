<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:paddingTop="12dp"
    android:background="@drawable/listview_selector"
    android:orientation="vertical">

    <TextView
        android:id="@+id/type_three_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="东莞虎门一火车"
        android:textColor="@color/gray_262626"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/type_three_left_img"
            android:layout_width="113dp"
            android:scaleType="centerCrop"
            android:layout_height="74dp" />

        <ImageView
            android:id="@+id/type_three_middle_img"
            android:layout_width="113dp"
            android:layout_height="74dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/type_three_right_img"
            android:layout_width="113dp"
            android:layout_height="74dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp" />
       </LinearLayout>

    <TextView
        android:id="@+id/type_three_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="东莞阳光网    8:34"
        android:layout_marginTop="7dp"
        android:textColor="@color/gray_848484"
        android:textSize="12sp" />

</com.zhy.android.percent.support.PercentLinearLayout>