<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/type_three_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="东莞虎门一火车"
        android:textColor="@color/gray_3c3c3c"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/type_three_left_img"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/type_three_middle_img"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/type_three_right_img"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/type_three_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="东莞阳光网    8:34"
        android:layout_marginTop="5dp"
        android:textColor="@color/gray_6E6E6E"
        android:textSize="12sp" />
</LinearLayout>