<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:background="@drawable/listview_selector"
    android:orientation="vertical">

    <TextView
        android:id="@+id/type_three_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="东莞虎门一火车"
        android:textColor="@color/gray_262626"
        android:textSize="16sp" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/type_three_left_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_heightPercent="@string/sw_230px"
            app:layout_widthPercent="@string/sw_330px"/>

        <ImageView
            android:id="@+id/type_three_middle_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_heightPercent="@string/sw_230px"
            app:layout_widthPercent="@string/sw_330px"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/type_three_right_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_heightPercent="@string/sw_230px"
            app:layout_widthPercent="@string/sw_330px"
            android:layout_marginLeft="5dp" />
       </com.zhy.android.percent.support.PercentLinearLayout>

    <TextView
        android:id="@+id/type_three_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="东莞阳光网    8:34"
        android:layout_marginTop="5dp"
        android:textColor="@color/gray_848484"
        android:textSize="12sp" />

</com.zhy.android.percent.support.PercentLinearLayout>