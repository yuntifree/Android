<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginRight="1dp"
    android:layout_marginLeft="1dp"
    android:paddingBottom="9dp"
    android:id="@+id/live_item_lay">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/live_bg_iv"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_live_style"
            android:gravity="center"
            android:padding="3dp"
            android:text="直播"
            android:textColor="@color/white"
            android:textSize="11sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="9dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle" />

        <TextView
            android:id="@+id/live_nick_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="直播"
            android:textColor="@color/gray_434343"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/live_watchs_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="right"
            android:text="100人"
            android:textColor="@color/gray_969696"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/live_location_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="广东    广州"
        android:maxLines="1"
        android:textColor="@color/gray_969696"
        android:textSize="12sp" />

</LinearLayout>