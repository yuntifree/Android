<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/img_bg_update"
    android:paddingLeft="17dp"
    android:paddingRight="17dp">

    <TextView
        android:id="@+id/version_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="102dp"
        android:textSize="15sp"
        android:textColor="@color/gray_5A5A5A"
        android:textStyle="bold"
        android:text="【新内容】"/>
    <TextView
        android:id="@+id/version_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_marginLeft="22dp"
        android:textStyle="bold"
        android:textColor="@color/gray_5A5A5A"
        android:text="*东莞无限商城"/>

    <TextView
        android:id="@+id/version_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="6dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:textSize="15sp"
        android:textColor="@color/gray_5A5A5A"
        android:ellipsize="none"
        android:maxLines="100"
        android:scrollHorizontally="false"
        android:text="更新即可用积分领取的优惠券在零食商城买买买啦！"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/update_cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@drawable/update_cancel_style"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:text="以后再说"/>

        <View style="@style/divide_line_vertical_9b9b9b"/>

        <TextView
            android:id="@+id/update_query_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@drawable/update_query_style"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:text="前往更新"/>

    </LinearLayout>

</LinearLayout>