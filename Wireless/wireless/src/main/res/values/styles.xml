<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="divide_line_vertical_blue">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/blue_00A0FB</item>
    </style>

    <style name="divide_line_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_f5f5f5</item>
    </style>

    <style name="divide_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_f5f5f5</item>
    </style>
    <style name="Button" parent="@style/Widget.AppCompat.Button.Borderless"/>
    <style name="Button.Blue" parent="Button"></style>

    <style name="Button.Blue.Hollow" parent="Button.Blue">
        <item name="android:background">@drawable/btn_blue_hollow</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
